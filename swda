<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Toggle Buttons</title>
    <style>
        /* CSS to hide buttons initially */
        .hidden-button {
            display: none;
        }
    </style>
</head>
<body>
    <!-- Button to toggle visibility of other buttons -->
    <button id="toggleButton">Show/Hide Buttons</button>

    <!-- Container for the buttons to be toggled -->
    <div id="buttonContainer">
        <button class="hidden-button">Button 1</button>
        <button class="hidden-button">Button 2</button>
        <button class="hidden-button">Button 3</button>
    </div>

    <script>
        // JavaScript to toggle the visibility of buttons
        document.addEventListener('DOMContentLoaded', () => {
            const toggleButton = document.getElementById('toggleButton');
            const buttonContainer = document.getElementById('buttonContainer');

            toggleButton.addEventListener('click', () => {
                // Toggle the display property of each button
                const buttons = buttonContainer.querySelectorAll('.hidden-button');
                buttons.forEach(button => {
                    if (button.style.display === 'none' || button.style.display === '') {
                        button.style.display = 'inline'; // or 'block', depending on layout
                    } else {
                        button.style.display = 'none';
                    }
                });
            });
        });
    </script>
</body>
</html>
