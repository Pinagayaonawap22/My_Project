<script>
        document.getElementById('toggleButton1').addEventListener('click', function() {
            var img = document.getElementById('recentImage');
            var button = document.getElementById('toggleButton1');

            if (img.style.display === 'none') {
                img.style.display = 'block';
                button.textContent = 'Hide Recent Image';
            } else {
                img.style.display = 'none';
                button.textContent = 'Show Recent Image';
            }
        });

        document.getElementById("toggleButton").addEventListener("click", function() {
            const leftDiv = document.getElementById("leftDiv");
            const rightDiv = document.getElementById("rightDiv");
            leftDiv.classList.toggle("visible");
            rightDiv.classList.toggle("expanded");
        });
    
        function tabControl(chooseDiv) {
            console.log("Tab control called with:", chooseDiv);
            for (let i = 1; i <= 11; i++) {
                const tab = document.getElementById('tabOpen' + i);
                if (tab) {
                    tab.classList.remove('active');
                }
            }
            const selectedTab = document.getElementById('tabOpen' + chooseDiv);
            if (selectedTab) {
                selectedTab.classList.add('active');
            } else {
                console.error("Tab not found:", 'tabOpen' + chooseDiv);
            }
        }
        let chart;

        async function fetchData() {
            try {
                const response = await fetch('/file_motion.txt'); // Ensure correct path
                if (!response.ok) throw new Error('Network response was not ok');
                const text = await response.text();
                // Split data and remove empty lines
                return text.split('\n').map(line => parseInt(line, 10)).filter(value => !isNaN(value));
            } catch (error) {
                console.error('Error fetching data:', error);
                return [];
            }
        }
        function checkForNewImage() {
            fetch('/check_image')
                .then(response => response.json())
                .then(data => {
                    if (data.status === 'new_image_available') {
                        document.getElementById('image').src = '/recent_image';
                    } else {
                        alert('No new image available.');
                    }
                })
                .catch(error => console.error('Error checking for new image:', error));
        }

        async function renderChart() {
            const data = await fetchData();
            if (data.length === 0) {
                console.error('No data available to display');
                return;
            }

            const ctx = document.getElementById('motionChart').getContext('2d');

            if (!chart) {
                // Create a new chart if it does not exist
                chart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: data.map((_, index) => index + 1),
                        datasets: [{
                            label: 'Motion Data',
                            data: data,
                            borderColor: 'green',
                            backgroundColor: 'rgba(255, 99, 132, 0.2)',
                            fill: false,
                            tension: 0.1
                        }]
                    },
                    options: {
                        scales: {
                            x: {
                                title: {
                                    display: true,
                                    text: 'Data Point'
                                },
                                ticks: {
                                    stepSize: 1
                                }
                            },
                            y: {
                                title: {
                                    display: true,
                                    text: 'Value'
                                },
                                beginAtZero: true,
                                ticks: {
                                    stepSize: 1
                                }
                            }
                        }
                    }
                });
            } else {
                // Update existing chart
                chart.data.labels = data.map((_, index) => index + 1);
                chart.data.datasets[0].data = data;
                chart.update();
            }

            console.log('Chart updated with data:', data); 
        }

   
        renderChart();

       
        setInterval(renderChart, 2000);


</script>
    
</body>
