  <script>
    function showHome() {
        document.getElementById('home').classList.remove('hidden');
        document.getElementById('Dashboard').classList.add('hidden');
        document.getElementById('Monitor').classList.add('hidden');
        document.getElementById('database').classList.add('hidden');
        document.getElementById('notifications').classList.add('hidden');
    }

    function showDashboard() {
        document.getElementById('home').classList.add('hidden');
        document.getElementById('Dashboard').classList.remove('hidden');
        document.getElementById('Monitor').classList.add('hidden');
        document.getElementById('database').classList.add('hidden');
        document.getElementById('notifications').classList.add('hidden');
    }

    function showMonitor() {
        document.getElementById('home').classList.add('hidden');
        document.getElementById('Dashboard').classList.add('hidden');
        document.getElementById('Monitor').classList.remove('hidden');
        document.getElementById('database').classList.add('hidden');
        document.getElementById('notifications').classList.add('hidden');
    }

    function showDatabase() {
        document.getElementById('home').classList.add('hidden');
        document.getElementById('Dashboard').classList.add('hidden');
        document.getElementById('Monitor').classList.add('hidden');
        document.getElementById('database').classList.remove('hidden');
        document.getElementById('notifications').classList.add('hidden');
    }

    function showNotifications() {
        document.getElementById('home').classList.add('hidden');
        document.getElementById('Dashboard').classList.add('hidden');
        document.getElementById('Monitor').classList.add('hidden');
        document.getElementById('database').classList.add('hidden');
        document.getElementById('notifications').classList.remove('hidden');
    }

    function addNotification(message) {
      const notificationList = document.getElementById('notificationList');
      const newNotification = document.createElement('div');
      newNotification.className = 'notification-item';
      newNotification.innerText = message;
      notificationList.appendChild(newNotification);
      notificationList.scrollTop = notificationList.scrollHeight;
    }

    async function datafetching(){
      try{
        const response = await fetch('/cognatefile.txt');
        if (!response.ok) throw new Error ("error network");

        const text = await response.text();

        const lines = text.trim().split('\n');
        const data = {
          temperature: [],
          humidity: [],
          waterPresence: [],
          pH: [],
          waterLevel: []
        };

        lines.forEach(line => {
          const [tempfetch, humidfetch, waterfetch, phfetch, waterlevelfetch] = line.split(',').map(Number);
          
          const values = [tempfetch, humidfetch, waterfetch, phfetch, waterlevelfetch].map(parseFloat);
          
          if (values.every(value => !isNaN(value))) {
            data.temperature.push(values[0]);
            data.humidity.push(values[1]);
            data.waterPresence.push(values[2]); 
            data.pH.push(values[3]);
            data.waterLevel.push(values[4]);
          }
        });
      } catch (error) {
          console.error('Error fetching data:', error);
          return
      }
    }
    
    async function textdisplay(){
      const data = await datafetching();

      let latesttemp = data.temperature[data.temperature.length - 1];
      let latesthumid =  data.humidity[ data.humidity.length - 1];
      let latestph = data.pH[data.pH.length - 1];
      let latestwaterlevel = data.waterLevel[data.waterLevel.length - 1];
      let latestprecense = data.waterPresence[data.waterPresence.length - 1];

      const tempnum = latesttemp;
      const humidnum = latesthumid;
      const phnum = latestph;
      const waterlevelnum = latestwaterlevel;

      const presencenum = latestprecense;

      document.getElementById('displaytemp').textContent = `${latesttemp.toFixed(2)} (c)`;
      document.getElementById("displayhumid").textContent = `${latesthumid.toFixed(2)} (%)`;
      document.getElementById('displayph').textContent = `${latestph.toFixed(2)} (ph)`;
      document.getElementById("displaywaterlevel").textContent = `${latestwaterlevel.toFixed(2)} (ml)`;
    }

    async function renderCharts(){
      const data = await datafetching();
      const tempHumpCtx = document.getElementById('tempHumpChart').getContext('2d');
      if (!tempHumpChart) {
        console.log('Creating sounds chart');
        tempHumpChart = new Chart(tempHumpCtx, {
        type: 'bar',
        data: {
          labels: data.soundsData.map((_, index) => index + 1), 
          datasets: [{
            label: 'Temperature (°C)',
            data: [data.temperature],
            backgroundColor: 'orange',
            fill: false,
            tension: 0.1,
            borderWidth: 1
          },
          {
            label: 'Humidity (%)',
            data: [data.humidity],
            backgroundColor: 'blue',
            fill: false,
            tension: 0.1,
            borderWidth: 1
          }]
          },
          options: {
            responsive: true,
            scales: {
              x: {
                title: {
                  display: true,
                  text: 'Time'
                },
                ticks: {
                  stepSize: 1
                }
                },
              y: {
                title: {
                  display: true,
                  text: 'Status'
                },
                  beginAtZero: true
                }
            }
          }
        });
      } else {
          console.log('Updating temperature and humidity chart');
          tempHumpChart.data.labels = data.timeData.map((_, index) => index + 1); // Update the labels
          tempHumpChart.data.datasets[0].data = data.temperature;  // Update temperature data
          tempHumpChart.data.datasets[1].data = data.humidity;  // Update humidity data
          tempHumpChart.update();
    }

    const waterlvlCtx = document.getElementById('waterlevelChart').getContext('2d');
    if (!waterlevelChart) {
      console.log('Creating water level chart');
      waterlevelChart = new Chart(waterlvlCtx, {
          type: 'doughnut',
          data: {
              labels:['Water Level', 'Remaining'],
              datasets: [{
                  label: 'Water Level (ml)',
                  data: [100, data.waterLevel],
                  backgroundColor: ['#36A2EB', '#FF6384'],
              }]
          },
          options: {
              responsive: true,
              scales: {
                  x: {
                      title: {
                          display: true,
                          text: 'Counts'
                      },
                      ticks: {
                          stepSize: 1
                      }
                  },
                  y: {
                      title: {
                          display: true,
                          text: 'Times'
                      },
                      beginAtZero: true
                  }
                }
              }
          });
      } else {
        console.log('Updating water level chart'); 
        waterlevelChart.data.datasets[0].data = [100, data.waterLevel];
        waterlevelChart.update();
        }
      const phCtx = document.getElementById('phChart').getContext('2d');
      if (!phChart) {
          console.log('Creating raindrop chart');
          phChart = new Chart(phCtx, {
              type: 'line',
              data: {
                  labels: data.rainData.map((_, index) => index + 1),
                  datasets: [{
                      label: 'ph Levels',
                      data: data.pH,
                      borderColor: 'rgba(75, 192, 192, 1)',
                      backgroundColor: 'rgba(75, 192, 192, 02.)',
                      fill: true,
                      tension: 0.1
                  }]
              },
              options: {
                  responsive: true,
                  scales: {
                      x: {
                          title: {
                              display: true,
                              text: 'level'
                          },
                          ticks: {
                              stepSize: 1
                          }
                      },
                      y: {
                          title: {
                              display: true,
                              text: 'time'
                          },
                          beginAtZero: true
                      }
                  }
              }
          });
      } else {
          console.log('Updating ph chart'); 
          phChart.data.labels = data.data.pH.map((_, index) => index + 1);
          phChart.data.datasets[0].data = data.data.pH;
          phChart.update();
      }
    }

    window.onload = () => {
      renderCharts(); 
      setInterval(renderCharts, 1500); 
    };

    textdisplay();
    setInterval(textdisplay, 1200);
  </script>
</body>
