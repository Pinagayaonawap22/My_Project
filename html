    <script>
        function tabControl(chooseDiv){
            document.getElementById('tabOpen1').classList.remove('active');
            document.getElementById('tabOpen2').classList.remove('active');
            document.getElementById('tabOpen3').classList.remove('active');
            document.getElementById('tabOpen4').classList.remove('active');
            document.getElementById('tabOpen5').classList.remove('active');
            document.getElementById('tabOpen6').classList.remove('active');
            document.getElementById('tabOpen7').classList.remove('active');
            document.getElementById('tabOpen8').classList.remove('active');
            document.getElementById('tabOpen9').classList.remove('active');
            document.getElementById('tabOpen10').classList.remove('active');
            document.getElementById('tabOpen11').classList.remove('active');

            document.getElementById('tabOpen' + chooseDiv).classList.add('active');
        }
        const temphumidChartx = document.getElementById('tempHumidityChart').get.Context('2d');
        const distanceChartx = document.getElementById('distanceChart').get.Context('2d');

        const tempHumidityChart = new Chart(temphumidChartx, {
            type: 'line',
            data: {
                labels: [],
                datasets: [
                    {
                        label: 'Temperature (C)',
                        borderColor: 'Blue',
                        data: [],
                        fill: false,
                    },
                    {
                        label: 'Humidity (%)',
                        borderColor: 'Red',
                        data: [],
                        fill: false,
                    }
                ]
            },
            options: {
                scales: {
                    x: {
                        type: 'time',
                        time: {
                            unit: 'second'
                        },
                        title: {
                            display: true,
                            text: 'Time'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Value'
                        }
                    }
                }
            }
        });     

        const distanceChart = new Chart(distanceChartx, {
            type: 'line',
            data: {
                labels: [],
                datasets: [{
                        label: 'Temperature (C)',
                        borderColor: 'Blue',
                        data: [],
                        fill: false,
                    }]
            },
            options: {
                scales: {
                    x: {
                        type: 'time',
                        time: {
                            unit: 'second'
                        },
                        title: {
                            display: true,
                            text: 'Time'
                        }
                    },
                    y: {
                        title: {
                            display: true,
                            text: 'Distance'
                        }
                    }
                }
            }
        });
    
        async function RaspiWebData(){
            fetch('/Raspi_data')
            .then(response => response.json())
            .then(data => {
                const time = new Date();

                if(data.temperature !== null && data.humidity !== null) {
                    if(tempHumidityChart.data.labels > 1000){
                        tempHumidityChart.data.labels.shift();
                        tempHumidityChart.data.datasets[0].data.shift();
                        tempHumidityChart.data.datasets[1].data.shift();
                    }
                    tempHumidityChart.data.labels.push(time);
                    tempHumidityChart.data.datasets[0].data.push(data.temperature);
                    tempHumidityChart.data.datasets[1].data.push(data.humidity);
                    tempHumidityChart.update();
                }
                if(data.distance !== null) {
                    if (distanceChart.data.labels.length > 1000) {
                        distanceChart.data.labels.shift();
                        distanceChart.data.datasets[0].data.shift();
                    }     
                    distanceChart.data.labels.push(time);
                    distanceChart.data.datasets[0].data.push(data.distance);
                    distanceChart.update();
            }
        });    
    }

    setInterval(RaspiWebData,2000);
    </script>
