  <script>
    function showHome() {
        document.getElementById('home').classList.remove('hidden');
        document.getElementById('Dashboard').classList.add('hidden');
        document.getElementById('Monitor').classList.add('hidden');
        document.getElementById('database').classList.add('hidden');
        document.getElementById('notifications').classList.add('hidden');
    }

    function showDashboard() {
        document.getElementById('home').classList.add('hidden');
        document.getElementById('Dashboard').classList.remove('hidden');
        document.getElementById('Monitor').classList.add('hidden');
        document.getElementById('database').classList.add('hidden');
        document.getElementById('notifications').classList.add('hidden');
    }

    function showMonitor() {
        document.getElementById('home').classList.add('hidden');
        document.getElementById('Dashboard').classList.add('hidden');
        document.getElementById('Monitor').classList.remove('hidden');
        document.getElementById('database').classList.add('hidden');
        document.getElementById('notifications').classList.add('hidden');
    }

    function showDatabase() {
        document.getElementById('home').classList.add('hidden');
        document.getElementById('Dashboard').classList.add('hidden');
        document.getElementById('Monitor').classList.add('hidden');
        document.getElementById('database').classList.remove('hidden');
        document.getElementById('notifications').classList.add('hidden');
    }

    function showNotifications() {
        document.getElementById('home').classList.add('hidden');
        document.getElementById('Dashboard').classList.add('hidden');
        document.getElementById('Monitor').classList.add('hidden');
        document.getElementById('database').classList.add('hidden');
        document.getElementById('notifications').classList.remove('hidden');
    }

    function addNotification(message) {
      const notificationList = document.getElementById('notificationList');
      const newNotification = document.createElement('div');
      newNotification.className = 'notification-item';
      newNotification.innerText = message;
      notificationList.appendChild(newNotification);
      notificationList.scrollTop = notificationList.scrollHeight;
    }

    async function datafetching(){
      try{
        const response = await fetch('/cognatefile.txt');
        if (!response.ok) throw new Error ("error network");

        const text = await response.text();

        const lines = text.trim().split('\n');
        const data = {
          temperature: [],
          humidity: [],
          waterPresence: [],
          pH: [],
          flow: [],
          waterLevel: []
        };

        lines.forEach(line => {
          const [tempfetch, humidfetch, waterfetch, phfetch, flowfetch, waterleve] = line.split(',').map(Number);
          
          const values = [tempfetch, humidfetch, waterfetch, phfetch, flowfetch, waterleve].map(parseFloat);
          
          if (values.every(value => !isNaN(value))) {
            data.temperature.push(values[0]);
            data.humidity.push(values[1]);
            data.waterPresence.push(values[2]); 
            data.pH.push(values[3]);
            data.flow.push(values[4]);
            data.waterLevel.push(values[5]);
          }
        });
      } catch (error) {
                console.error('Error fetching data:', error);
                return { soundsData: [], rainData: [] };
      }
    }

    const phChartCtx = document.getElementById('phChart').getContext('2d');
    const phChart = new Chart(phChartCtx, {
      type: 'line',
      data: {
        labels: ['Time 1', 'Time 2', 'Time 3'],
        datasets: [{
          label: 'pH Levels',
          data: [7.0, 6.8, 7.2],
          borderColor: 'blue',
          fill: false
        }]
      }
    });

    const tempHumChartCtx = document.getElementById('tempHumChart').getContext('2d');
    const tempHumChart = new Chart(tempHumChartCtx, {
      type: 'bar',
      data: {
        labels: ['Time 1', 'Time 2', 'Time 3'],
        datasets: [
          {
            label: 'Temperature (°C)',
            data: [25, 27, 26],
            backgroundColor: 'orange'
          },
          {
            label: 'Humidity (%)',
            data: [60, 65, 63],
            backgroundColor: 'lightblue'
          }
        ]
      }
    });

    const waterLevelChartCtx = document.getElementById('waterLevelChart').getContext('2d');
    const waterLevelChart = new Chart(waterLevelChartCtx, {
      type: 'doughnut',
      data: {
        labels: ['Water Level', 'Remaining'],
        datasets: [{
          label: 'Water Level',
          data: [75, 25],
          backgroundColor: ['#36A2EB', '#FF6384']
        }]
      }
    });
  </script>
