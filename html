                const now = Date.now();
                if (now - intervalStartTime >= intervalMinutes * 60 * 1000) {
                    // Update the display with the highest temperature of the interval
                    highestTempDisplay.textContent = `Highest Temp Recorded Today: ${highestTemperature.toFixed(1)} ${temperatureUnit}`;

                    // Reset tracking for the new interval
                    highestTemperature = -Infinity;
                    intervalStartTime = now;
                }
