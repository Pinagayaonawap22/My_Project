<script>

        document.getElementById("toggleButton").addEventListener("click", function() {
            const leftDiv = document.getElementById("leftDiv");
            const rightDiv = document.getElementById("rightDiv");
            leftDiv.classList.toggle("visible");
            rightDiv.classList.toggle("expanded");
        });
    
        function tabControl(chooseDiv) {
            console.log("Tab control called with:", chooseDiv);
            for (let i = 1; i <= 14; i++) {
                const tab = document.getElementById('tabOpen' + i);
                if (tab) {
                    tab.classList.remove('active');
                }
            }
            const selectedTab = document.getElementById('tabOpen' + chooseDiv);
            if (selectedTab) {
                selectedTab.classList.add('active');
            } else {
                console.error("Tab not found:", 'tabOpen' + chooseDiv);
            }
        }

        async function toggleStatus() {
            const response = await fetch('/toggle_status', {
                method: 'POST',
            });
            const data = await response.json();
            alert(`Status changed to: ${data.status}`);
        }

    let map;
    let distancegpsChart;
    const buzzerstat = document.getElementById('colorbuzzer1');

    async function txtfetching() {
        try {
            const response = await fetch('/Gps_data');
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return await response.json();
        } catch (error) {
            console.error('Error fetching data:', error);
        }
    }

    async function textdisplay() {
        const data = await txtfetching();
        if (!data) return;

        let latestdist = data.distanceact6;
        let latestlat = data.latitude;
        let latestlong = data.longitude;
        let latestalt = data.altitude;
        let latesttime = data.time;

        const distancevalue = data.distanceact6;

        document.getElementById('displaydistanceact6').textContent = `${latestdist.toFixed(2)}`;

        if (distancevalue < 30) {
            document.getElementById('displaylatitude').textContent = `${latestlat.toFixed(2)}`;
            document.getElementById('displaylongitude').textContent = `${latestlong.toFixed(2)}`;
            document.getElementById('displayaltitude').textContent = `${latestalt.toFixed(2)}`;
            document.getElementById('displaytime').textContent = `${latesttime.toFixed(2)}`;
        }
    }

    async function renderCharts() {
        const data = await txtfetching();
        if (!data || data.distanceact6 === null) {
            console.error('No data available to display');
            return;
        }

        const distanceCtx = document.getElementById('distancegpsChart').getContext('2d');
        if (!distancegpsChart) {
            console.log('Creating distance chart');
            distancegpsChart = new Chart(distanceCtx, {
                type: 'line',
                data: {
                    labels: [''],
                    datasets: [{
                        label: 'Distance (cm)',
                        data: [Number(data.distanceact6)],
                        borderColor: 'rgba(153, 102, 255, 1)',
                        backgroundColor: 'rgba(153, 102, 255, 0.5)',
                        fill: false,
                        tension: 0.1,
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Time'
                            },
                            ticks: {
                                stepSize: 1
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Value'
                            },
                            beginAtZero: true
                        }
                    }
                }
            });
        } else {
            console.log('Updating distance chart');
            distancegpsChart.data.labels.push(data.time);
            distancegpsChart.data.datasets[0].data.push(Number(data.distanceact6));
            distancegpsChart.update();
        }
    }

    async function initMap() {
        const data = await txtfetching();
        if (!data) return;

        let gpslat = data.latitude;
        let gpslong = data.longitude;
        let gpsalt = data.altitude;
        let gpsdistance = data.distanceact6;

        if (gpsdistance < 30) {
            gpslat = 0;
            gpslong = 0;
            gpsalt = 0;
        }

        if (!map) {
            map = L.map('map').setView([gpslat, gpslong], 13); // Default zoom to 13

            // Add OpenStreetMap tiles
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);
        } else {
            map.setView([gpslat, gpslong], gpsalt);
        }

        // Add a marker for the GPS coordinates
        if (!map.hasLayer(marker)) {
            var marker = L.marker([gpslat, gpslong]).addTo(map);
            marker.bindPopup(`<b>GPS Location</b><br>Latitude: ${gpslat}<br>Longitude: ${gpslong}`).openPopup();
        }
    }

    window.onload = () => {
        renderCharts();
        textdisplay();
        initMap();
        setInterval(renderCharts, 1500);
        setInterval(textdisplay, 900);
        setInterval(initMap, 900);
    };
</script>
    
</body>
</html>
