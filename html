<script>

        document.getElementById('toggleButton1').addEventListener('click', function() {
            var img = document.getElementById('recentImage');
            var button = document.getElementById('toggleButton1');

            if (img.style.display === 'none') {
                img.style.display = 'block';
                button.textContent = 'Hide Recent Image';
            } else {
                img.style.display = 'none';
                button.textContent = 'Show Recent Image';
            }
        });

        document.getElementById("toggleButton").addEventListener("click", function() {
            const leftDiv = document.getElementById("leftDiv");
            const rightDiv = document.getElementById("rightDiv");
            leftDiv.classList.toggle("visible");
            rightDiv.classList.toggle("expanded");
        });
    
        function tabControl(chooseDiv) {
            console.log("Tab control called with:", chooseDiv);
            for (let i = 1; i <= 11; i++) {
                const tab = document.getElementById('tabOpen' + i);
                if (tab) {
                    tab.classList.remove('active');
                }
            }
            const selectedTab = document.getElementById('tabOpen' + chooseDiv);
            if (selectedTab) {
                selectedTab.classList.add('active');
            } else {
                console.error("Tab not found:", 'tabOpen' + chooseDiv);
            }
        }

        let smokeChart;
        let vibrationChart;

        async function txtfetching() {
            try {
                const response = await fetch('/file_motion.txt'); 
                if (!response.ok) throw new Error('Network response was not ok');
                const text = await response.text();
                
                const lines = text.trim().split('\n');
                const smokeData = [];
                const vibrationData = [];
                
                lines.forEach(line => {
                    const [smoke, vibration] = line.split(',').map(Number); 
                    if (!isNaN(smoke) && !isNaN(vibration)) {
                        smokeData.push(smoke);
                        vibrationData.push(vibration);
                    }
                });

                return { smokeData, vibrationData };
                
            } catch (error) {
                console.error('Error fetching data:', error);
                return { smokeData: [], vibrationData: [] };
            }
        }


        async function renderCharts() {
            const data = await txtfetching();
            if (data.length === 0) {
                console.error('No data available to display');
                return;
            }

    
            const smokeCtx = document.getElementById('smokeChart').getContext('2d');
            if (!smokeChart) {
                smokeChart = new Chart(smokeCtx, {
                    type: 'line',
                    data: {
                        labels: smokeData.map((_, index) => index + 1),
                        datasets: [{
                            label: 'smoke level',
                            data: smokeData,
                            borderColor: 'green',
                            backgroundColor: 'rgba(255, 99, 132, 0.2)',
                            fill: false,
                            tension: 0.1
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            x: {
                                title: {
                                    display: true,
                                    text: 'Data Point'
                                },
                                ticks: {
                                    stepSize: 1
                                }
                            },
                            y: {
                                title: {
                                    display: true,
                                    text: 'smoke level (ppm)'
                                },
                                beginAtZero: true
                            }
                        }
                    }
                });
            } else {
                smokeChart.data.labels = smokeData.map((_, index) => index + 1);
                smokeChart.data.datasets[0].data = smokeData;
                smokeChart.update();
            }

            // Render Water Level Chart
            const vibrationCtx = document.getElementById('vibrationChart').getContext('2d');
            if (!vibrationChart) {
                vibrationChart = new Chart(vibrationCtx, {
                    type: 'line',
                    data: {
                        labels: vibrationData.map((_, index) => index + 1),
                        datasets: [{
                            label: 'vibration activity',
                            data: vibrationData,
                            borderColor: 'blue',
                            backgroundColor: 'rgba(54, 162, 235, 0.2)',
                            fill: false,
                            tension: 0.1
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            x: {
                                title: {
                                    display: true,
                                    text: 'Data Point'
                                },
                                ticks: {
                                    stepSize: 1
                                }
                            },
                            y: {
                                title: {
                                    display: true,
                                    text: 'vibration activity'
                                },
                                beginAtZero: true
                            }
                        }
                    }
                });
            } else {
                vibrationChart.data.labels = vibrationData.map((_, index) => index + 1);
                vibrationChart.data.datasets[0].data = vibrationData;
                vibrationChart.update();
            }

            console.log('Charts updated with data:', {smokeData, vibrationData});
        }

        window.onload = renderCharts;
        setInterval(renderCharts, 2000);
</script>
    
</body>
