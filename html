<script>
        document.getElementById('toggleButton1').addEventListener('click', function() {
            var img = document.getElementById('recentImage');
            var button = document.getElementById('toggleButton1');

            if (img.style.display === 'none') {
                img.style.display = 'block';
                button.textContent = 'Hide Recent Image';
            } else {
                img.style.display = 'none';
                button.textContent = 'Show Recent Image';
            }
        });

        document.getElementById("toggleButton").addEventListener("click", function() {
            const leftDiv = document.getElementById("leftDiv");
            const rightDiv = document.getElementById("rightDiv");
            leftDiv.classList.toggle("visible");
            rightDiv.classList.toggle("expanded");
        });
    
        function tabControl(chooseDiv) {
            console.log("Tab control called with:", chooseDiv);
            for (let i = 1; i <= 14; i++) {
                const tab = document.getElementById('tabOpen' + i);
                if (tab) {
                    tab.classList.remove('active');
                }
            }
            const selectedTab = document.getElementById('tabOpen' + chooseDiv);
            if (selectedTab) {
                selectedTab.classList.add('active');
            } else {
                console.error("Tab not found:", 'tabOpen' + chooseDiv);
            }
        }

        async function toggleStatus() {
            const response = await fetch('/toggle_status', {
                method: 'POST',
            });
            const data = await response.json();
            alert(`Status changed to: ${data.status}`);
        }

        let soundChart;
        let rainChart;
        const buzzerstat = document.getElementById('colorbuzzer1')

        async function txtfetching() {
            try {
                const response = await fetch('/weatherfile.txt'); 
                console.log('Response Status:', response.status); 
                if (!response.ok) throw new Error('Network response was not ok');
                
                const text = await response.text();
                console.log('Fetched text:', text); 

                const lines = text.trim().split('\n');
                const soundsData = [];
                const rainData = [];
                      
                lines.forEach(line => {
                    const [sounds1, raindrop1] = line.split(',').map(Number); 
                       
                    const soundValue = parseFloat(sounds1);
                    const rainValue = parseFloat(raindrop1);
                    if (!isNaN(soundValue) && !isNaN(rainValue)) {
                        soundsData.push(soundValue);
                        rainData.push(rainValue);
                    }
                });

                console.log('Sound Data:', soundsData); 
                console.log('Rain Data:', rainData);

                return { soundsData, rainData };
                
            } catch (error) {
                console.error('Error fetching data:', error);
                return { soundsData: [], rainData: [] };
            }
        }

        async function textdisplay() {
            const data = await txtfetching();

            if (data.soundsData.length === 0 || data.rainData.length === 0) {
                console.error('No data available to display');
                return;
            }
            
            let latestsound = data.soundsData[data.soundsData.length - 1];
            let latestrainion = data.rainData[data.rainData.length - 1];
            const rainnum = latestrainion;
            const soundnum = latestsound;
            
            document.getElementById('displaysounds').textContent = `${latestsound.toFixed(2)} dB`;
            document.getElementById("displayrain").textContent = `${latestrainion.toFixed(2)} Rd`;
            
            if(rainnum === 1){
                const statusdisplay = document.getElementById('statusDisplay'); 
                statusdisplay.style.backgroundColor = "#f8d7da";
                document.getElementById('statusVibration').textContent = "Vibration Detected";
            }else if(rainnum === 0){
                const statusdisplay = document.getElementById('statusDisplay'); 
                statusdisplay.style.backgroundColor = "#fff3cd";
                document.getElementById('statusVibration').textContent = "No activity";
            }
            if(soundnum < 70){
                const statusdisplay1 = document.getElementById('statusDisplay1'); 
                statusdisplay1.style.backgroundColor = "#d4edda";
                document.getElementById('statusSmoke').textContent = "Normal (No Smoke Detected)";
            }else if(soundnum > 71 && soundnum < 130){
                const statusdisplay1 = document.getElementById('statusDisplay1'); 
                statusdisplay1.style.backgroundColor = "#fff3cd";
                document.getElementById('statusSmoke').textContent = "Warning (Low Smoke Level)";
            }else if(soundnum > 131){
                const statusdisplay1 = document.getElementById('statusDisplay1'); 
                statusdisplay1.style.backgroundColor = "#f8d7da";
                document.getElementById('statusSmoke').textContent = "Alert (High Smoke Level)"; 
            }
         }   


        async function renderCharts() {
            const data = await txtfetching();
            if (data.soundsData.length === 0 || data.rainData.length === 0) {
                console.error('No data available to display');
                return;
            }
            const soundCtx = document.getElementById('soundChart').getContext('2d');
            if (!soundChart) {
                console.log('Creating sounds chart');
                soundChart = new Chart(soundCtx, {
                    type: 'bar',
                    data: {
                        labels: data.soundsData.map((_, index) => index + 1), 
                        datasets: [{
                            label: 'Sounds Level (db)',
                            data: data.soundsData.map(Number),
                            borderColor: 'rgba(153, 102, 255, 1)',
                            backgroundColor: 'rgba(153, 102, 255, 0.5)',
                            fill: false,
                            tension: 0.1,
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            x: {
                                title: {
                                    display: true,
                                    text: 'Decibel'
                                },
                                ticks: {
                                    stepSize: 1
                                }
                            },
                            y: {
                                title: {
                                    display: true,
                                    text: 'Time'
                                },
                                beginAtZero: true
                            }
                        }
                    }
                });
            } else {
                console.log('Updating sound chart');
                soundChart.data.labels = data.soundsData.map((_, index) => index + 1);
                soundChart.data.datasets[0].data = data.soundsData.map(Number);
                soundChart.update();
            }
            const rainCtx = document.getElementById('rainChart').getContext('2d');
            if (!rainChart) {
                console.log('Creating raindrop chart');
                rainChart = new Chart(rainCtx, {
                    type: 'line',
                    data: {
                        labels: data.rainData.map((_, index) => index + 1),
                        datasets: [{
                            label: 'Rain Count(l)',
                            data: data.rainData,
                            borderColor: 'rgba(75, 192, 192, 1)',
                            backgroundColor: 'rgba(75, 192, 192, 02.)',
                            fill: true,
                            tension: 0.1
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            x: {
                                title: {
                                    display: true,
                                    text: 'Counts'
                                },
                                ticks: {
                                    stepSize: 1
                                }
                            },
                            y: {
                                title: {
                                    display: true,
                                    text: 'Times'
                                },
                                beginAtZero: true
                            }
                        }
                    }
                });
            } else {
                console.log('Updating rain chart'); 
                rainChart.data.labels = data.rainData.map((_, index) => index + 1);
                rainChart.data.datasets[0].data = data.rainData;
                rainChart.update();
            }

            console.log('Charts updated with data:', { soundsData: data.soundsData, rainData: data.rainData });
        }

      
        window.onload = () => {
            renderCharts(); 
            setInterval(renderCharts, 1500); 
        };
textdisplay();
setInterval(textdisplay, 900);
</script>
    
</body>
</html>
